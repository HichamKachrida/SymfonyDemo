<div class="col-sm-12">
    <div class="iq-card iq-card-block iq-card-stretch iq-card-height">
        <div class="iq-card-body">
            <div class="user-post-data">
                <div class="d-flex flex-wrap">
                    <div class="media-support-user-img mr-3">
                        {% if post.user.profilPic is null %}
                            <a href="{{ path('profil', {'id' : post.user.id}) }}"><img src="images/user/base.jpg" class="rounded-circle img-fluid" alt="{{ post.user.username }}"></a>
                        {% else %}
                            <a href="{{ path('profil', {'id' : post.user.id}) }}"><img src="{{ 'uploads/medias/' ~asset(post.user.profilPic.file) }}" class="rounded-circle img-fluid" alt="{{ post.user.username }}"></a>
                        {% endif %}
                    </div>
                    <div class="media-support-info mt-2">
                        <h5 class="mb-0 d-inline-block"><a href="{{ path('profil', {'id' : post.user.id}) }}" class="">{{ post.user.username }}</a></h5>
                        <p class="mb-0 text-primary">{{ post.postDate|timeAgo }}</p>
                    </div>
                    {% if post.user.id == app.user.id %}
                        <div class="iq-card-post-toolbar">
                            <div class="dropdown">
                                <span class="dropdown-toggle" id="postdata-5" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" role="button">
                                    <i class="ri-more-fill"></i>
                                </span>
                                <div class="dropdown-menu m-0 p-0" aria-labelledby="postdata-5">
                                    <a class="dropdown-item p-3" href="javascript:void();">
                                        <div class="d-flex align-items-top">
                                            <div class="icon font-size-20"><i class="ri-close-circle-line"></i></div>
                                            <div class="data ml-2">
                                                <h6>Supprimer le post</h6>
                                                <p class="mb-0">Cette suppression est définitive.</p>
                                            </div>
                                        </div>
                                    </a>
                                </div>
                            </div>
                        </div>

                    {% endif %}
                </div>
            </div>
            {% if post.content is not null %}
                <div class="mt-3">
                    <p>{{ post.content }}</p>
                </div>
            {% endif %}
            {% if post.media is not null %}
                <div class="user-post">
                    <a href="javascript:void();"><img src="{{ 'uploads/medias/' ~asset(post.media.file) }}" alt="post-image" class="img-fluid rounded w-100"></a>
                </div>
            {% endif %}
            <div class="comment-area mt-3">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="like-block position-relative d-flex align-items-center">
                        <div class="d-flex align-items-center">
                            <div class="like-data">
                                <div class="dropdown">
                                                <span class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" role="button">
                                                <img src="images/icon/01.png" class="img-fluid" alt="">
                                                </span>
                                    <div class="dropdown-menu">
                                        <a class="ml-2 mr-2" href="javascript:void();"><img src="images/icon/01.png" class="img-fluid" alt=""></a>
                                        <a class="mr-2" href="javascript:void();"><img src="images/icon/02.png" class="img-fluid" alt=""></a>
                                        <a class="mr-2" href="javascript:void();"><img src="images/icon/03.png" class="img-fluid" alt=""></a>
                                        <a class="mr-2" href="javascript:void();"><img src="images/icon/04.png" class="img-fluid" alt=""></a>
                                        <a class="mr-2" href="javascript:void();"><img src="images/icon/05.png" class="img-fluid" alt=""></a>
                                        <a class="mr-2" href="javascript:void();"><img src="images/icon/06.png" class="img-fluid" alt=""></a>
                                        <a class="mr-2" href="javascript:void();"><img src="images/icon/07.png" class="img-fluid" alt=""></a>
                                    </div>
                                </div>
                            </div>
                            <div class="total-like-block ml-2 mr-3">
                                <div class="dropdown">
                                                        <span class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" role="button">
                                                            {{ random(10, 20) }} Likes
                                                        </span>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" href="#">Max Emum</a>
                                        <a class="dropdown-item" href="#">Bill Yerds</a>
                                        <a class="dropdown-item" href="#">Hap E. Birthday</a>
                                        <a class="dropdown-item" href="#">Tara Misu</a>
                                        <a class="dropdown-item" href="#">Midge Itz</a>
                                        <a class="dropdown-item" href="#">Sal Vidge</a>
                                        <a class="dropdown-item" href="#">Other</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="total-comment-block">
                            <div class="dropdown">
                                                    <span class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" role="button">
                                                        {{ post.comments|length }} commentaire(s)
                                                    </span>
                                {% if post.comments is not null %}
                                    <div class="dropdown-menu">
                                        {% for comment in post.comments %}
                                            <a class="dropdown-item" href="#">{{ comment.user.username }}</a>
                                        {% endfor %}
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
                <hr>
                <ul class="post-comments p-0 m-0">
                    {% for comment in post.comments %}
                        <li class="mb-2">
                            <div class="d-flex flex-wrap">
                                <div class="user-img">
                                    {% if comment.user.profilPic is null %}
                                        <a href="{{ path('profil', {'id' : post.user.id}) }}"><img src="images/user/base.jpg" class="avatar-35 rounded-circle img-fluid" alt="{{ comment.user.username }}"></a>
                                    {% else %}
                                        <a href="{{ path('profil', {'id' : post.user.id}) }}"><img src="{{ 'uploads/medias/' ~asset(comment.user.profilPic.file) }}" class="avatar-35 rounded-circle img-fluid" alt="{{ comment.user.username }}"></a>
                                    {% endif %}
                                </div>
                                <div class="comment-data-block ml-3">
                                    <h6>{{ comment.user.username }}</h6>
                                    <p class="mb-0">{{ comment.content }}</p>
                                    <div class="d-flex flex-wrap align-items-center comment-activity">
                                        <a href="javascript:void();">liker</a>
                                        <a href="javascript:void();">répondre</a>
                                        <span> {{ comment.date|timeAgo }} </span>
                                    </div>
                                </div>
                            </div>
                        </li>
                    {% endfor %}
                </ul>
                <form class="comment-text d-flex align-items-center mt-3" action="javascript:void(0);">
                    <input type="text" class="form-control rounded">
                    <div class="comment-attagement d-flex">
                        <a href="javascript:void();"><i class="ri-camera-line mr-3"></i></a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>