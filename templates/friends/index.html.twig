{% extends 'base.html.twig' %}

{% block title %}Liste de vos amis{% endblock %}

{% block body %}

    <!-- Page Content  -->
    <div id="content-page" class="content-page">
        <div class="container">
            <div class="row">
                {% for friend in friends %}
                <div class="col-md-6">
                    <div class="iq-card">
                        <div class="iq-card-body profile-page p-0">
                            <div class="profile-header-image">
                                <div class="cover-container">
                                    <img src="images/page-img/profile-bg{{ random(1, 3) }}.jpg" alt="profile-bg" class="rounded img-fluid w-100">
                                </div>
                                <div class="profile-info p-4">
                                    <div class="user-detail">
                                        <div class="d-flex flex-wrap justify-content-between align-items-start">
                                            <div class="profile-detail d-flex">
                                                <div class="profile-img pr-4">
                                                    <a href="{{ path('profil', {'id' : friend.id}) }}">
                                                    {% if friend.profilPic is null %}
                                                        <img src="images/user/base.jpg" alt="{{ friend.username }}" class="avatar-130 img-fluid" />
                                                    {% else %}
                                                        <img src="{{ 'uploads/medias/' ~asset(friend.profilPic.file) }}" alt="{{ friend.username }}" class="avatar-130 img-fluid" />
                                                    {% endif %}
                                                    </a>
                                                </div>
                                                <div class="user-data-block">
                                                    <a href="{{ path('profil', {'id' : friend.id}) }}">
                                                        <h4 class="">{{ friend.username }}</h4>
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>
    </div>
    <!-- Wrapper END -->

{% endblock %}
