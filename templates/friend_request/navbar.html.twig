<li class="nav-item">
    <a class="search-toggle iq-waves-effect" href="javascript:void();">
        <i class="ri-group-line"></i>
        {% if friendshipRequests|length > 0 %}
            <span class="bg-danger dots"></span>
        {% endif %}
    </a>
    <div class="iq-sub-dropdown iq-sub-dropdown-large">
        <div class="iq-card shadow-none m-0">
            <div class="iq-card-body p-0 ">
                <div class="bg-primary p-3">
                    <h5 class="mb-0 text-white">Demandes d'amis<small class="badge  badge-light float-right pt-1">{{ friendshipRequests|length }}</small></h5>
                </div>
                {% for request in friendshipRequests %}
                    <div class="iq-friend-request">
                        <div class="iq-sub-card iq-sub-card-big d-flex align-items-center justify-content-between" >
                            <div class="d-flex align-items-center">
                                <div class="">
                                    {% if request.source.profilPic is null %}
                                        <img src="images/user/base.jpg" alt="{{ request.source.username }}" class="avatar-40 rounded" />
                                    {% else %}
                                        <img src="{{ 'uploads/medias/' ~asset(request.source.profilPic.file) }}" alt="{{ request.source.username }}" class="avatar-40 rounded" />
                                    {% endif %}
                                </div>
                                <div class="media-body ml-3">
                                    <h6 class="mb-0 ">{{ request.source.username }}</h6>
                                </div>
                            </div>
                            <div class="d-flex align-items-center">
                                <a href="{{ path('friend_accept', {'source' : request.source.id }) }}" class="mr-3 btn btn-primary rounded">Confirmer</a>
                                <a href="{{ path('friend_refuse', {'source' : request.source.id }) }}" class="mr-3 btn btn-secondary rounded">Supprimer</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}

                {% if friendshipRequests is empty %}
                    <div class="iq-friend-request">
                        <div class="iq-sub-card iq-sub-card-big d-flex align-items-center justify-content-between" >
                            <div class="d-flex align-items-center">
                                <div class="">
                                    Vous n'avez aucune demande d'ami pour le moment.
                                </div>
                            </div>
                        </div>
                    </div>
                {% endif %}

                <div class="text-center">
                    <a href="{{ path('friend_request') }}" class="mr-3 btn text-primary">Voir toutes les demandes</a>
                </div>
            </div>
        </div>
    </div>
</li>