{% extends 'base.html.twig' %}

{% block title %}Demandes d'amis{% endblock %}

{% block body %}

    <!-- Page Content  -->
    <div id="content-page" class="content-page">
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <div class="iq-card">
                        <div class="iq-card-header d-flex justify-content-between">
                            <div class="iq-header-title">
                                <h4 class="card-title">Demande(s) d'ami(s)</h4>
                            </div>
                        </div>
                        <div class="iq-card-body">
                            <ul class="request-list list-inline m-0 p-0">
                                {% for request in friendshipRequests %}
                                <li class="d-flex align-items-center">
                                    <div class="user-img img-fluid">
                                    {% if request.source.profilPic is null %}
                                        <img src="images/user/base.jpg" alt="{{ request.source.username }}" class="rounded-circle avatar-40" />
                                    {% else %}
                                        <img src="{{ 'uploads/medias/' ~asset(request.source.profilPic.file) }}" alt="{{ request.source.username }}" class="rounded-circle avatar-40" />
                                    {% endif %}
                                    </div>
                                    <div class="media-support-info ml-3">
                                        <h6>{{ request.source.username }}</h6>
                                    </div>
                                    <div class="d-flex align-items-center">
                                        <a href="{{ path('friend_accept', {'source' : request.source.id }) }}" class="mr-3 btn btn-primary rounded">Accepter</a>
                                        <a href="{{ path('friend_refuse', {'source' : request.source.id }) }}" class="mr-3 btn btn-secondary rounded">Refuser</a>
                                    </div>
                                </li>
                                {% endfor %}

                                {% if friendshipRequests is empty %}
                                <p>Vous n'avez aucune demande d'ami pour le moment.</p>
                                {% endif %}
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
    <!-- Wrapper END -->

{% endblock %}
